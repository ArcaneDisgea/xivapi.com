{% extends "admin/base.html.twig"  %}

{% block title %}Companion{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Companion API Errors</h3>
            <p class="card-text">This graph shows the number of error responses from the Companion API</p>

            <br/>

            <div id="chart"></div>
        </div>
    </div>

    <script>
        var options = {
            chart: {
                type: 'bar',
                height: '400px',
                toolbar: {
                    show: false
                },
            },
            series: [{
                name: 'Daily Hits',
                data: {{ errorGraph.keys|json_encode|raw }}
            }],
            xaxis: {
                categories: {{ errorGraph.keys|json_encode|raw  }}
            }
        }

        var chart = (new ApexCharts(document.querySelector("#chart"), options));
        chart.render();

    </script>

    <br/><br/>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Companion API Errors</h3>

            <table class="table">
                <thead>
                <tr>
                    <th width="30%">Exception</th>
                    <th>Count</th>
                </tr>
                </thead>
                <tbody>
                {% for ex, count in errors.exceptions %}
                    <tr>
                        <td><strong>{{ ex }}</strong></td>
                        <td>{{ count|number_format }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <br/>

            <div id="chart"></div>
        </div>
    </div>

    <br/><br/>

    <div class="card">
        <div class="card-body">
            {% for account, accountServers in token_servers %}
                <h3>{{ account }}</h3>
                <table class="table table-bordered table-striped">
                    {% for server in valid_servers %}
                        <tr>
                            <td width="30%">{{ server }}</td>
                            <td width="30%" class="{{ server in accountServers ? 'text-success' : 'text-danger' }}">
                                <strong>{{ server in accountServers ? 'OK' : 'NO CHARACTER' }}</strong>
                            </td>
                            <td>
                                {% for dcName, dcServers in datacenter %}
                                    {% if server in dcServers %}{{ dcName }}{% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endfor %}
        </div>
    </div>

{% endblock %}
